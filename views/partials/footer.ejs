<!-- views/partials/footer.ejs -->


<div class="fixed-bottom ">
  
  <nav class="bottom-menu">
      <div class="" role="group" aria-label="Button group with nested dropdown">
        <a class="bottom-bar" href="/artists" role="button">All Artists</a>
        <a class="bottom-bar" href="/user/<%= currentUser.id %>/inbox" role="button">Left to rate &nbsp;&nbsp;<span id="rate-badge" class="badge badge-danger"></span></a>
        <a class="bottom-bar" href="/rating" role="button" data-toggle="tooltip" data-placement="bottom" title="Tooltip on bottom">My Ratings</a>
         <a class="bottom-bar" href="/rating" role="button" data-toggle="tooltip" data-placement="bottom" title="Tooltip on bottom">Add Artist</a>
      </div>
  </nav>   

   
  
</div>
   
    <script>
     function getRateBadge(){
      fetch('https://block-party-coreyjsax.c9users.io/api/users/<%= currentUser.id %>/inbox')
      .then(function(res){
        return res.json()
      }).then(function(data){
        var badgeNum = data.length;
        if(data.length > 0){
          document.getElementById('rate-badge').innerText = badgeNum;
          document.getElementById('topbadge').innerText = badgeNum;
        }
        
      });
     }
     getRateBadge();
     
     function getArtistBadge(){
       fetch('https://block-party-coreyjsax.c9users.io/api/artists')
       .then(function(res){
         return res.json()
       }).then(function(data){
         var artBadge = data.length;
         if(data.length > 0){
           document.getElementById('art-badge').innerText = artBadge;
           document.getElementById('topdata').innerText = artBadge;
         }
         
       });
     }
     getArtistBadge();
     function getRatingBadge(){
       fetch('https://block-party-coreyjsax.c9users.io/api/ratings')
       .then(function(res){
         return res.json()
       }).then(function(data){
         var ratingBadge = data.length;
         if(data.length > 0){
           document.getElementById('ratings-badge').innerText = ratingBadge;
         }
       })
     }
     getRatingBadge();
     
     
     
    </script>     

</body>
</html>